[Unit]
Description=Icescrum Service
After=syslog.target

[Service]
Type=simple
User={{ icescrum_user }}
ExecStart=/usr/bin/java -Xmx{{ icescrum_xmx }}{% if icescrum_xms is defined %} -Xms{{ icescrum_xms }}{% endif %} -jar {{ icescrum_install_dir }}/icescrum.jar{%  if icescrum_maxpermsize is defined %} -XX:MaxPermSize={{ icescrum_maxpermsize }}{% endif %}{% if icescrum_scheme == 'https' %} httpsProxy=true{% endif %}{% if icescrum_host is defined %} host={{ icescrum_host }}{% endif %}{% if icescrum_port is defined %} port={{ icescrum_port }}{% endif %} context={{ icescrum_context }} workDir={{ icescrum_work_dir }}

[Install]
WantedBy=multi-user.target
